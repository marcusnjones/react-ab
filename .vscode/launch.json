{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to API (Node)",
      "type": "node",
      "request": "attach",
      "port": 9228,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/api/src",
      "remoteRoot": "/home/node/app/src",
      "protocol": "inspector",
      "restart": true
    },
    {
      "name": "Docker: Attach to UI (Next.js)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "cwd": "${workspaceFolder}/ui",
      "localRoot": "${workspaceFolder}/ui",
      "remoteRoot": "/home/node/app",
      "skipFiles": ["<node_internals>/**"],
    },
    {
      "name": "Local: Attach to UI (Next.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/ui/node_modules/.bin/next",
      "cwd": "${workspaceFolder}/ui",
      "restart": true,
      "console": "internalConsole"
    }
  ]
}
